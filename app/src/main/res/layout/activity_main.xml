<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Simple header -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.imbox.emojikeyboard.text.EmojiTextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emoji Keyboard Test ðŸ˜€"
            android:textColor="@color/emjkb_black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/debug_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLLAPSED"
            android:textColor="#8E8E93"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Fake Chat -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/input_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:stackFromEnd="true"
        tools:listitem="@layout/item_chat_message" />

    <!-- Emoji test bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/input_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/emjkb_white"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Icon buttons -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_toggle_emoji_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:src="@drawable/emjkb_smile"
                android:tint="@color/emjkb_black"
                android:visibility="visible"
                tools:visibility="visible" />

            <!-- Test edit text -->
            <com.imbox.emojikeyboard.text.EmojiEditText
                android:id="@+id/et_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:hint="@string/write_here"
                android:includeFontPadding="false"
                android:textColor="@color/emjkb_black"
                android:textColorHint="#9D9D9D" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- SendButton -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_send"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/ic_send"
        android:tint="#4CB6C5"
        app:layout_constraintBottom_toBottomOf="@id/input_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginBottom="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>