<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        style="@style/SimpleCardBubbleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/category_recent"
                style="@style/EmojiCategoryButtonStyle"
                android:src="@drawable/clock" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/category_people"
                style="@style/EmojiCategoryButtonStyle"
                android:src="@drawable/smile" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/category_nature"
                style="@style/EmojiCategoryButtonStyle"
                android:src="@drawable/dog" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/category_food"
                style="@style/EmojiCategoryButtonStyle"
                android:src="@drawable/coffee" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/category_sports"
                style="@style/EmojiCategoryButtonStyle"
                android:src="@drawable/volleyball" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/category_transport"
                style="@style/EmojiCategoryButtonStyle"
                android:src="@drawable/car_front" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/category_technology"
                style="@style/EmojiCategoryButtonStyle"
                android:src="@drawable/lightbulb" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/category_symbols"
                style="@style/EmojiCategoryButtonStyle"
                android:src="@drawable/square_radical" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/category_flags"
                style="@style/EmojiCategoryButtonStyle"
                android:src="@drawable/flag" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>